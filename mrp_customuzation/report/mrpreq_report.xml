<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_mrpreq_id_card" model="ir.actions.report">
        <field name="name">MRP Request Card</field>
        <field name="model">maintenance.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mrp_customuzation.report_mrpreq_card</field>
        <field name="report_file">mrp_customuzation.report_mrpreq_card</field>
        <field name="print_report_name">'MRP Request Card - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_maintenance_request"/>
    </record>
    <template id="report_mrpreq_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                            <h1>TEST QQQQQQ</h1>
                    <div class="page">
                        <div class="col-6 mx-auto text-center">
                            <h1>Maintenance Request Information</h1>
                            <h2 t-field="doc.name"/>
                        </div>
                        <div class="row py-2 border-bottom border-top">
                            <div class="col-3">
                                <p>Created By</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.requester_id.name"/>
                            </div>
                            <div class="col-2"></div>
                            <div class="col-3">
                                <p>Equipment</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.equipment_id.name"/>
                            </div>
                            <div class="col-3">
                                <p>Category</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.category_id.name"/>
                            </div>
                            <div class="col-3">
                                <p>Request Date</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.request_date"/>
                            </div>
                            <div class="col-3">
                                <p>Close Date</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.close_date"/>
                            </div>
                            <div class="col-3">
                                <p>Maintenance Type </p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.maintenance_type"/>
                            </div>
                        </div>
                        <div class="row py-2 border-bottom">
                            <div class="col-3">
                                <p>Team</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.maintenance_team_id.name"/>
                            </div>
                            <div class="col-2"></div>
                            <div class="col-3">
                                <p>Responsible</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.user_id.name"/>
                            </div>
                            <div class="col-3">
                                <p>Schedule Date</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.schedule_date"/>
                            </div>
                            <div class="col-3">
                                <p>Duration</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.duration"/>
                            </div>
                            <div class="col-3">
                                <p>Priority</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.priority"/>
                            </div>
                            <div class="col-3">
                                <p>Company</p>
                            </div>
                            <div class="col-2">
                                <p t-field="doc.company_id.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>