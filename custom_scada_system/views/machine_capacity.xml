<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="machine_capacity_form" model="ir.ui.view">
        <field name="name">machine.capacity.form</field>
        <field name="model">machine.capacity</field>
        <field name="arch" type="xml">
            <form>
                <field name="machine_name"/>
                <field name="length"/>
                <field name="dia"/>
                <field name="Producedperhour"/>
                <field name="producedpershift"/>
                <field name="Nailpermin"/>
            </form>
        </field>
    </record>
    <!--    tree-->
    <record id="machine_capacity_transaction_tree" model="ir.ui.view">
        <field name="name">machine.capacity.tree</field>
        <field name="model">machine.capacity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="machine_name"/>
                <field name="length"/>
                <field name="dia"/>
                <field name="Producedperhour"/>
                <field name="producedpershift"/>
                <field name="Nailpermin"/>
            </tree>
        </field>
    </record>

    <!--action-->
    <record id="action_machine_capacity_menu" model="ir.actions.act_window">
        <field name="name"> Machine Capacity </field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">machine.capacity</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--    end action-->
    <menuitem name="Capacity"
              id="menu_machine_capacity"
              parent="scada_conf"
             action="action_machine_capacity_menu"/>
</odoo>